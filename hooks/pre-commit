#!/usr/bin/env bash

# Pre-commit hook to format Nix files with nixfmt
# This hook will automatically format all staged .nix files

set -e

# Check if nixfmt is available
if ! command -v nixfmt &> /dev/null; then
    echo "Error: nixfmt is not installed or not in PATH"
    echo "Please install nixfmt to use this pre-commit hook"
    echo "You can install it with: nix-env -iA nixpkgs.nixfmt-rfc-style"
    exit 1
fi

# Get all staged .nix files
STAGED_NIX_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.nix$' || true)

if [ -n "$STAGED_NIX_FILES" ]; then
    echo "Formatting Nix files with nixfmt..."

    # Format each file
    for file in $STAGED_NIX_FILES; do
        if [ -f "$file" ]; then
            echo "  Formatting: $file"
            nixfmt "$file"
            # Re-add the file to staging after formatting
            git add "$file"
        fi
    done

    echo "Formatting complete!"
fi

exit 0
